<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="0dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardUseCompatPadding="true"  app:cardPreventCornerOverlap="false" app:strokeColor="@color/gray_200"  app:strokeWidth="1dp"> <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/foodImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_image_background"
        android:clipToOutline="true"
        tools:src="@drawable/food_placeholder"
        android:contentDescription="Food Image" />

    <TextView
        android:id="@+id/foodNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/foodImageView"
        app:layout_constraintTop_toTopOf="@id/foodImageView"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Tên món ăn dài và khó đọc" />

    <TextView
        android:id="@+id/foodCategoryTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="2dp"
        android:background="@drawable/rounded_category_tag"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/foodImageView"
        app:layout_constraintTop_toBottomOf="@id/foodNameTextView"
        tools:text="Món kho,hầm" />

    <TextView
        android:id="@+id/foodPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/orange"
        android:textSize="15sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/foodImageView"
        app:layout_constraintTop_toBottomOf="@id/foodCategoryTextView"
        tools:text="70.000 VNĐ" />

    <TextView
        android:id="@+id/foodDescriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/text_color_secondary"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/foodImageView"
        app:layout_constraintTop_toBottomOf="@id/foodPriceTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Mô tả chi tiết về món ăn này, bao gồm các thành phần chính và cách chế biến đặc biệt." />

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>