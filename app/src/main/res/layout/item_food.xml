<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <!-- Image -->
        <ImageView
            android:id="@+id/imgFood"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_image_placeholder"
            android:contentDescription="Food image" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgFood"
            android:layout_marginStart="12dp"
            android:text="Chicken Thai Biriyani"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Tag -->
        <TextView
            android:id="@+id/tvTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFoodName"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/imgFood"
            android:background="@drawable/bg_tag_orange"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="Nướng"
            android:textColor="#FF7754"
            android:textSize="12sp" />

        <!-- Rating -->
        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTag"
            android:layout_toEndOf="@id/imgFood"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="★ 4.9 (10 Review)"
            android:textColor="#FF7754"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:contentDescription="Delete"
            android:src="@drawable/delete" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>