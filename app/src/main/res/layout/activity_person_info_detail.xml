<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layout_margin="20dp"
    android:fitsSystemWindows="true"
    tools:context=".Activity.PersonInfoDetailActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sửa thông tin"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Avatar with Pencil Icon -->
    <FrameLayout
        android:id="@+id/avatarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/avatarDetail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="#FFD4BC"
            android:scaleType="centerCrop"
            android:contentDescription="Ảnh đại diện" />

        <ImageView
            android:id="@+id/editPencil"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="4dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Chỉnh sửa ảnh"
            android:padding="4dp"
            android:src="@drawable/ic_pencil" />
    </FrameLayout>

    <!-- User Info Form -->
    <LinearLayout
        android:id="@+id/infoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/info_background"
        android:padding="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/avatarLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textAllCaps="true"
            android:textColor="#444444"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/userNameDetail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Nhập họ và tên"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="EMAIL"
            android:textAllCaps="true"
            android:textColor="#444444"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/userEmailDetail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Nhập email"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Số điện thoại"
            android:textAllCaps="true"
            android:textColor="#444444"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/userPhoneDetail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Nhập số điện thoại"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Địa chỉ"
            android:textAllCaps="true"
            android:textColor="#444444"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/userAddressDetail"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:hint="Nhập địa chỉ"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="BIO"
            android:textAllCaps="true"
            android:textColor="#444444"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/userBioDetail"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_bg"
            android:gravity="top|start"
            android:hint="Nhập bio"
            android:padding="12dp"
            android:textColor="#000000"
            android:textColorHint="#888888"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Save Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_background"
        android:text="Lưu"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>
